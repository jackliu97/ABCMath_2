{% if lesson_id %}
	<div class="panel panel-default">
		<div class="panel-heading">All attachments for {{ currentLesson.description }} {{currentLesson.lesson_date |date("m/d/Y") }}</div>
		<div class="panel-body">
			<input type="hidden" id="lesson_id" value="{{ lesson_id }}">
			<div class="row">
					<div class="col-sm-1">
						<a type="button" class="add_attachment btn btn-xs btn-success">ADD</a>
					</div>

					<div class="col-sm-5">
						<label>File</label>
					</div>
					<div class="col-sm-5">
						<label>Description</label>
					</div>

				</div>
		</div>
		<ul class="list-group">
		{% for attachment in attachments %}
			<li class="list-group-item">
				<div class="row">
					<div class="col-sm-1">
						<button attachment_id="{{ attachment.id }}" class="btn delete_attachment glyphicon glyphicon-remove" style="width:45px;"></button>
					</div>
					<div class="col-sm-5 assignment_type">
						<h6><a href="/class_dashboard/open_attachment/{{attachment.id}}">{{ attachment.file_name }}</a></h6>
					</div>
					<div class="col-sm-5 assignment_weight">
						<h6>{{ attachment.description }}</h6>
					</div>

				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
{% else %}
	<div class="alert alert-warning" role="alert">Please select a lesson from the right.</div>
{% endif %}
