{% if lesson_id %}
	<div class="panel panel-default">
		<div class="panel-heading">Take attendance for {{ currentLesson.description }}, {{currentLesson.lesson_date |date("m/d/Y") }}</div>
		<div class="panel-body">
			<input type="hidden" id="lesson_id" value="{{ lesson_id }}">
			<a type="button" class="mark_all_present btn btn-default">MARK ALL HERE</a>
		</div>
		<ul class="list-group">
		{% for student in students %}
			<li class="list-group-item">
				<div class="row">
					<div class="col-sm-3">
						{{ student.first_name }} {{ student.last_name }}
					</div>
					<div class="col-sm-8">
						<a type="button" student_id="{{ student.id }}" class="here_button mark_present btn btn-{% if student.present == 1 %}success{% else %}default{% endif %}">H</a>
						<a type="button" student_id="{{ student.id }}" class="tardy_button mark_tardy btn btn-{% if student.tardy == '' %}default{% else %}warning{% endif %}">L</a>
						<a type="button" student_id="{{ student.id }}" class="absent_button mark_absent btn btn-{% if student.present == 2 %}danger{% else %}default{% endif %}">A</a>

						{% if single_batch_hw %}
							<a student_id="{{ student.id }}" class="btn btn-default attendance_data" data-toggle="tooltip" data-placement="top" data-type="homework" title="Homework">HW</a>
						{% else %}
							<a student_id="{{ student.id }}" class="btn btn-default attendance_data" data-toggle="tooltip" data-placement="top" data-type="verbal" title="Verbal">VR</a>
							<a student_id="{{ student.id }}" class="btn btn-default attendance_data" data-toggle="tooltip" data-placement="top" data-type="math" title="Math">MT</a>
							<a student_id="{{ student.id }}" class="btn btn-default attendance_data" data-toggle="tooltip" data-placement="top" data-type="essay" title="Essay">ES</a>
						{% endif %}
					</div>
				</div>
			</li>
		{% endfor %}
		</ul>
	</div>
{% else %}
	<div class="alert alert-warning" role="alert">Please select a lesson from the right.</div>
{% endif %}
